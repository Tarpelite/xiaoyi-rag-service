# Qdrant 配置
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=reports

# 模型来源: modelscope (国内推荐) 或 huggingface
MODEL_SOURCE=modelscope

# Embedding 模型配置
# ModelScope 模型 ID
EMBEDDING_MODEL=AI-ModelScope/bge-large-zh-v1.5
# HuggingFace 模型 ID (备用)
EMBEDDING_MODEL_HF=BAAI/bge-large-zh-v1.5
EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=32

# Reranker 模型配置
# ModelScope 模型 ID
RERANKER_MODEL=AI-ModelScope/bge-reranker-large
# HuggingFace 模型 ID (备用)
RERANKER_MODEL_HF=BAAI/bge-reranker-large
RERANKER_DEVICE=cuda

# 检索参数
BM25_WEIGHT=0.3
VECTOR_WEIGHT=0.7
TOP_K_RETRIEVAL=100
TOP_K_RERANK=10

# 分块参数
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# 数据目录
DATA_DIR=./data
PDF_DIR=./data/pdfs
PARSED_DIR=./data/parsed

# 日志
LOG_LEVEL=INFO
DEBUG=false

# API 配置
API_HOST=0.0.0.0
API_PORT=8000
